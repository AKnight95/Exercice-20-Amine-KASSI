    </head>
    <body>
        
        <header>
            <nav class="navbar navbar-expand-lg">
                <!-- Container wrapper -->
                <div class="container-fluid">
                  <!-- Toggle button -->
                  <button
                    class="navbar-toggler"
                    type="button"
                    data-mdb-toggle="collapse"
                    data-mdb-target="#navbarLeftAlignExample"
                    aria-controls="navbarLeftAlignExample"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
                  >
                    <i class="fas fa-bars"></i>
                  </button>
        
                  <!-- Collapsible wrapper -->
                  <div class="collapse navbar-collapse" id="navbarLeftAlignExample">
                    <!-- Left links -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        
                      <div class="logo">
        
                        <li class="nav-item">
                          <a class="nav-link active" aria-current="page" href="{{ path('home') }}">LOGO</a>
                        </li>
        
                      </div>
        
                      <div class="navRight">
        
                        <!-- Navbar dropdown -->
        
                        <li class="nav-item element">
                          <a class="nav-link" href="{{ path('app_animaux_index') }}">Animaux</a>
                        </li>
                        
                        
                        <li class="nav-item element">
                          <a class="nav-link" href="#">Contact</a>
                        </li>
        
                        {% if is_granted('ROLE_USER') %}
        
                        <ul class="navbar-nav">
                          <!-- Avatar -->
                          <li class="nav-item dropdown">
                            <a
                              class="nav-link dropdown-toggle d-flex align-items-center"
                              href="#"
                              id="navbarDropdownMenuLink"
                              role="button"
                              data-mdb-toggle="dropdown"
                              aria-expanded="false"
                            >
                              <img
                                src="{{ asset('/assets/SpectralRegister.jpg')}}"
                                class="rounded-circle"
                                alt=""
                                loading="lazy"
                              />
                            </a>
                            <ul class="dropdown-menu dropdown-menu-lg-end" aria-labelledby="navbarDropdownMenuLink">
                              <li id="userName">{{ app.user.nom }}</li>
                              <li><hr class="dropdown-divider" /></li>
                              <li><a class="dropdown-item" href="{{ path('app_user')}}">Profil</a></li>
        
                              {% if is_granted('ROLE_ADMIN') %}
                                <li><a class="dropdown-item" href="{{ path('admin')}}">Espace Admin</a></li>
                              {% endif %}
        
                              <li><a class="dropdown-item" href="{{ path('app_logout')}}">Se déconnecter</a></li>
                            </ul>
                          </li>
                        </ul>
        
                        {% else %}
        
                        <li class="nav-item element">
                            <a class="nav-link" href="{{ path('app_login')}}">Se connecter</a>
                        </li>
                        <li class="nav-item element">
                            <a class="nav-link" href="{{ path('app_register')}}">S'inscrire</a>
                        </li>
        
                        {% endif %}
                      
                      </div>
        
                    </ul>
                    <!-- Left links -->
                  </div>
                  <!-- Collapsible wrapper -->
                </div>
                <!-- Container wrapper -->
              </nav>
        </header>

        {% block body %}
        
        {% endblock %}
        
        <footer class="page-footer font-small special-color-dark pt-4 shadow-5-strong">

            <!-- Footer Elements -->
            <div class="container">
          
              <!-- Social buttons -->
              <ul class="list-unstyled list-inline text-center">
                <li class="list-inline-item">
                  <a class="btn-floating btn-fb mx-1">
                    <i class="fab fa-facebook-f"> </i>
                  </a>
                </li>
                <li class="list-inline-item">
                  <a class="btn-floating btn-tw mx-1">
                    <i class="fab fa-twitter"> </i>
                  </a>
                </li>
                <li class="list-inline-item">
                  <a class="btn-floating btn-gplus mx-1">
                    <i class="fab fa-google-plus-g"> </i>
                  </a>
                </li>
                <li class="list-inline-item">
                  <a class="btn-floating btn-li mx-1">
                    <i class="fab fa-linkedin-in"> </i>
                  </a>
                </li>
                <li class="list-inline-item">
                  <a class="btn-floating btn-dribbble mx-1">
                    <i class="fab fa-dribbble"> </i>
                  </a>
                </li>
              </ul>
              <!-- Social buttons -->
          
            </div>
            <!-- Footer Elements -->
          
            <!-- Copyright -->
            <div class="footer-copyright text-center py-3">
              <a href="#"> Mentions légales</a>
            </div>
            <!-- Copyright -->
          
          </footer>
          <!-- Footer -->
        
    </body>
